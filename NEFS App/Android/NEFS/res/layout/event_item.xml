<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/monthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/event_item_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="April"
        android:textColor="@color/grey_color"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/dayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthLabel"
        android:layout_alignLeft="@+id/monthLabel"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:text="10"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/EventTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dayLabel"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/dayLabel"
        android:paddingTop="@dimen/event_item_vertical_margin"
        android:text="Morgan Stanley talk"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/eventTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EventTitleLabel"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/event_item_vertical_margin"
        android:text="18:30"
        android:textColor="@color/grey_color"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/eventStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dayLabel"
        android:layout_alignBottom="@+id/dayLabel"
        android:layout_toRightOf="@+id/EventTitleLabel"
        android:layout_alignLeft="@+id/eventTimeLabel"
        android:text="going"
        android:textColor="@color/text_color1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
